      <div class="col-lg-6 col-md-8">
          <% if(error && error.length > 0){ %>
            <div class="bg-white rounded-right border-left border-danger shadow-sm text-center py-3 px-2">
              <p class="mb-0"><strong>Uh oh! </strong><%= error %></p>
            </div>
          <% } %>
          <% if(success && success.length > 0){ %>
            <div class="bg-white rounded-right border-left border-success shadow-sm text-center py-3 px-2">
              <p class="mb-0"><strong>Nice! </strong><%= success %></p>
            </div>
          <% } %>
        </div>
      </div>
